int main()
{
    //Programming Homework Odd or Even//
    int n;

    std::cout << "Please Enter a Number: ";
    std::cin >> n;

    if (n % 2 == 0)
        std::cout << " is an even number.";

    else
        std::cout << " is an odd number.";

    return 0;
    
    //Note to self: always add " std:: "...//

}
